# =============================================================================
# PYSYSTEM - Configuration File
# =============================================================================
# Environment variables for the Python Business Management System
# Copy this file to .env and customize the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=PYSYSTEM
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# =============================================================================
# GUI SETTINGS
# =============================================================================
# Main window dimensions
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_MIN_WIDTH=800
WINDOW_MIN_HEIGHT=600

# Theme settings
THEME=corporate
GUI_SCALING=1.0

# =============================================================================
# DATA PERSISTENCE
# =============================================================================
# Data directory for JSON files
DATA_DIR=data
COMPANIES_FILE=companies.json
PRODUCTS_FILE=products.json
SALES_ORDERS_FILE=sales_orders.json

# Backup settings
BACKUP_ENABLED=true
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# BrasilAPI Configuration
BRASILAPI_BASE_URL=https://brasilapi.com.br/api
BRASILAPI_TIMEOUT=10
BRASILAPI_RETRY_ATTEMPTS=3

# Cache settings
CACHE_ENABLED=true
CACHE_DIR=cache
CACHE_TTL_SECONDS=3600

# =============================================================================
# VALIDATION SETTINGS
# =============================================================================
# CPF/CNPJ validation
VALIDATE_CPF_CNPJ=true
ALLOW_INVALID_TEST_DOCUMENTS=false

# Address validation
VALIDATE_CEP=true
AUTO_COMPLETE_ADDRESS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Database-like settings for JSON operations
MAX_RECORDS_PER_PAGE=50
ENABLE_SEARCH_INDEXING=true
SEARCH_MIN_CHARS=2

# File processing
MAX_EXCEL_ROWS=10000
EXCEL_CHUNK_SIZE=1000

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_DIR=logs
LOG_FILE=pysystem.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Console logging
LOG_TO_CONSOLE=true
CONSOLE_LOG_LEVEL=INFO

# =============================================================================
# REPORT GENERATION
# =============================================================================
REPORTS_DIR=reports
PDF_MARGINS_MM=15
PDF_FONT_SIZE=10
PDF_INCLUDE_LOGO=true
PDF_LOGO_PATH=assets/logo.png

# =============================================================================
# BUSINESS RULES
# =============================================================================
# Sales order validation
ALLOW_NEGATIVE_STOCK=false
REQUIRE_CUSTOMER_VALIDATION=true
AUTO_GENERATE_ORDER_NUMBER=true

# Product management
AUTO_UPDATE_STOCK=true
TRACK_INVENTORY_CHANGES=true
REQUIRE_PRODUCT_CATEGORIES=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development mode
DEV_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_GUI=false
SHOW_PERFORMANCE_METRICS=false

# Testing
RUN_TESTS_ON_STARTUP=false
TEST_DATA_DIR=test_data
GENERATE_TEST_REPORTS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Data validation and sanitization
SANITIZE_INPUT_DATA=true
VALIDATE_FILE_UPLOADS=true
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls,.csv

# Session management (future feature)
SESSION_TIMEOUT_MINUTES=60
AUTO_SAVE_INTERVAL_SECONDS=300

# =============================================================================
# LOCALIZATION
# =============================================================================
LANGUAGE=pt_BR
CURRENCY=BRL
DATE_FORMAT=%d/%m/%Y
DATETIME_FORMAT=%d/%m/%Y %H:%M:%S
TIMEZONE=America/Sao_Paulo

# Number formatting
DECIMAL_PLACES=2
THOUSANDS_SEPARATOR=.
DECIMAL_SEPARATOR=,

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_EXCEL_IMPORT=true
ENABLE_PDF_EXPORT=true
ENABLE_BRASILAPI_INTEGRATION=true
ENABLE_ADDRESS_AUTOCOMPLETE=true
ENABLE_COMPANY_LOOKUP=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_BULK_OPERATIONS=true
ENABLE_DATA_EXPORT=true
ENABLE_SYSTEM_BACKUPS=true

# Experimental features
ENABLE_DARK_MODE=false
ENABLE_PLUGINS=false
ENABLE_API_SERVER=false
